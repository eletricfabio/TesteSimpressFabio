@model TesteSimpressFabio.Models.Produto

@{
    ViewBag.Title = "Delete";
}

<h2>Excluir</h2>

<div>
    <h4>Produto</h4>

    <div class="alert alert-danger" role="alert">
        <strong>Opps!</strong> Deseja realmente excluir este Produto?
    </div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProdutoNome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProdutoNome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProdutoDescricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProdutoDescricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProdutoAtivo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProdutoAtivo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProdutoPerecivel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProdutoPerecivel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoriaProduto.CategoriaNome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoriaProduto.CategoriaNome)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger btn-sm" />
            @Html.ActionLink("Retornar", "Index", new { id = Model.ProdutoID }, new { @class = "btn btn-info btn-sm" })
        </div>
    }
</div>
